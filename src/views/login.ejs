<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row row-login">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
      <%- include('includes/messages') %>
    </div>
    <div class="row row-login">
      <div class="col-lg">
        <h4>Faça seu cadastro</h4>
        <p>Se você ainda não tem uma conta, preencha o formulário abaixo:</p>

        <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div id="password-feedback" class="password-rules">
            <p id="length" class="invalid">Mínimo de 3 caracteres</p>
            <p id="uppercase" class="invalid">Uma letra maiúscula</p>
            <p id="number" class="invalid">Um número</p>
            <p id="special" class="invalid">Um caractere especial</p>
        </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
        </form>

      </div>


      <div class="col-lg">
        <h4>Faça seu login</h4>
        <p>Se você já tem uma conta, faça login abaixo:</p>
        <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>